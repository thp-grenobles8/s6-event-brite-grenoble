<div class="jumbotron bg-secondary">
    <div class="mx-auto" style="width: 400px;">
        <h1>Création d'Event</h1>
    </div>
</div>



<div class="mx-auto" style="width: 900px;">
<div class='container'>
    <%= form_tag url_for(action: 'create'), method: "post" do %>

    <p>Merci de renseigner les champs suivants :</p>
    <div class="col-sm-6">
        <%= text_field_tag 'title', "", class: "form-control", placeholder: "Titre"%>
    </div><br>

    <div class="col-sm-6">
        <%= text_area_tag 'description', "", class: "form-control", placeholder: "Description"%>
    </div><br>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                        <input id="start_date" name="start_date" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
                        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker1').datetimepicker(locale: 'fr');
                });
            </script>
        </div>
    </div>

    <div class="col-sm-2">
        <%= text_field_tag 'duration', "", class: "form-control", placeholder: "Durée (mn)"%>
    </div><br>

    <div class="col-sm-2">
        <%= text_field_tag 'price', "", class: "form-control", placeholder: "€"%>
    </div><br>

    <div class="col-sm-6">
        <%= text_area_tag 'location', "", class: "form-control", placeholder: "Addresse"%>
    </div><br>

    <%= submit_tag 'Créer ton event', class: " mx-auto col-sm-3 btn  btn-light btn-outline-secondary  my-2 " %>

    <% end %>
    </div>
</div>