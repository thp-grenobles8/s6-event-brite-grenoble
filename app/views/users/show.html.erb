
<div class="jumbotron bg-secondary">
    <div class="mx-auto" style="width: 400px;">
        <h1>Profil de <%= @user.first_name %></h1>
    </div>
</div>


<div class="card-group">
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="far fa-address-card"></i></i></h5>
    <p class="card-text"> <%= @user.description %></p>
  </div>
</div>

<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="fas fa-file-signature"></i></h5>
    <p class="card-text"> <%= @user.last_name %></p>
  </div>
</div>

<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><i class="fas fa-at"></i></h5>
    <p class="card-text"><%= @user.email %></p>
  </div>
</div>
</div>

<div class='mx-auto' style="width: 400px;height: 80px;">
<h2>Liste des Events :</h2>
</div>

<div class='card-columns'>
	<% @events.each do |event| %>
		<% if event.administrator == @user %>
		<div class="card bg-secondary" style="width: 18rem;">
		  <!-- <img src="..." class="card-img-top" alt="..."> -->
		  <div class="card-body">
		    <h5 class="card-title"><a class="text-warning"><%= link_to event.title.upcase , event_path(event.id)%></a></h5>
		  </div>
		</div>
	 	<% end %>
	 <% end %>
</div>

<p class="lead">
	<div class="btn btn-dark">
		<%= link_to "Editer mon profil", edit_user_registration_path, :class => "btn" %>
	</div>
</p>


